
syntax on
set mouse=a 
set encoding=utf-8
set tabstop=4
set showcmd
set showmode
filetype indent on
set autoindent
set shiftwidth=4
set expandtab
set nocompatible
set relativenumber
set nowrap
set textwidth=80
set laststatus=2
set ruler
set showmatch
set hlsearch
set incsearch
set ignorecase
set spell spelllang=en_us
set undofile
set noerrorbells
set history=1000
set autoread
inoremap jj <Esc>
nnoremap J 9j
nnoremap K 9k
vnoremap J 9j
vnoremap K 9k
